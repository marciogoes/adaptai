# ===================================
# ADAPTAI - Configuração do Backend
# ===================================

# IMPORTANTE: Copie este arquivo para .env e preencha com suas credenciais reais
# cp .env.example .env

# ============================
# APLICAÇÃO
# ============================
APP_NAME=AdaptAI
VERSION=2.1
ENVIRONMENT=development

# ============================
# BANCO DE DADOS MYSQL
# ============================
# Para desenvolvimento local, use seu MySQL local
# Para produção, use suas credenciais do DBaaS

DB_HOST=localhost
DB_PORT=3306
DB_USER=seu_usuario
DB_PASSWORD=sua_senha
DB_NAME=adaptai

# Exemplo produção (Railway/DBaaS):
# DB_HOST=seu_host.mysql.dbaas.com.br
# DB_PORT=3306
# DB_USER=seu_usuario
# DB_PASSWORD=sua_senha_segura
# DB_NAME=adaptai

# ============================
# JWT / SEGURANÇA
# ============================
# IMPORTANTE: Gere uma chave secreta forte!
# Você pode usar: openssl rand -hex 32

SECRET_KEY=sua_chave_secreta_aqui_minimo_32_caracteres
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ============================
# CLAUDE AI (ANTHROPIC)
# ============================
# Obtenha sua API key em: https://console.anthropic.com/

ANTHROPIC_API_KEY=sk-ant-api03-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
CLAUDE_MODEL=claude-sonnet-4-20250514

# ============================
# CORS (Frontend)
# ============================
# URLs permitidas para acesso ao backend
# Separe múltiplas URLs com vírgula

CORS_ORIGINS=http://localhost:5173,http://localhost:3000,https://seu-frontend.vercel.app

# ============================
# STORAGE / UPLOADS
# ============================
# Caminho para storage de arquivos

STORAGE_PATH=./storage
MAX_UPLOAD_SIZE_MB=10

# ============================
# CONFIGURAÇÕES OPCIONAIS
# ============================

# Debug mode (apenas development)
DEBUG=True

# Timezone
TIMEZONE=America/Sao_Paulo

# Logging
LOG_LEVEL=INFO
